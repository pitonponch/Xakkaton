# -*- coding: utf-8 -*-
import telebot
from telebot import types

bot = telebot.TeleBot('')

@bot.message_handler(commands=["start"])
def start(m):
    keyboard = types.ReplyKeyboardMarkup(resize_keyboard=True)
    keyboard.add(*[types.KeyboardButton(name) for name in ['Верхняя неделя', 'Нижняя неделя', 'Сессия/Практика']])
    bot.send_message(m.chat.id, 'Привет друг мой', reply_markup=keyboard)


@bot.message_handler(content_types=['text'])
def message(message):
    if message.text == 'Верхняя неделя':
        keyboardgostart = types.ReplyKeyboardMarkup(resize_keyboard=True)
        keyboardgostart.add(*[types.KeyboardButton(name) for name in ['1 курс', '2 курс', '3 курс', '4 курс']])
        bot.send_message(message.chat.id, 'С какого ты курса друг мой?', reply_markup=keyboardgostart)
    elif message.text == 'Нижняя неделя':
        keyboardgostart = types.ReplyKeyboardMarkup(resize_keyboard=True)
        keyboardgostart.add(*[types.KeyboardButton(name) for name in ['1 курс', '2 курс', '3 курс', '4 курс']])
        bot.send_message(message.chat.id, 'Какой курс?', reply_markup=keyboardgostart)
    elif message.text == 'Сессия/Практика':
        keyboardgostart = types.ReplyKeyboardMarkup(resize_keyboard=True)
        keyboardgostart.add(*[types.KeyboardButton(name) for name in ['1 курс', '2 курс', '3 курс', '4 курс']])
        bot.send_message(message.chat.id, 'Какой курс нужен?', reply_markup=keyboardgostart)

bot.polling()
