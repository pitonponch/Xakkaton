# -*- coding: utf-8 -*-
import telebot
from telebot import types

bot = telebot.TeleBot('5002670071:AAE9j6ruQYg-9QZZPtxSc0i7YFVhSU4NLMg')

def main():
    markup = types.ReplyKeyboardMarkup(True)
    key1 = types.KeyboardButton('Верхняя неделя')
    key2 = types.KeyboardButton('Нижняя неделя')
    key3 = types.KeyboardButton('Практика')
    key4 = types.KeyboardButton('Сессия')
    markup.add(key1, key2)
    markup.add(key3, key4)
    return markup

@bot.message_handler(commands=['Привет'])
def start(message):
    bot.send_message(message.chat.id, 'Приветствую, друг мой, я пока что только beta версия настоящего меня!!!', reply_markup=main())

@bot.message_handler(content_types=['text'])
def cont(message):
    if message.text == 'Верхняя неделя':
        bot.send_message(message.chat.id, 'Держите', reply_markup=main())
    elif message.text == 'Нижняя неделя':
        bot.send_message(message.chat.id, 'Вот ваша информация', reply_markup=main())
    elif message.text == 'Практика':
        bot.send_message(message.chat.id, 'Стоит подождать', reply_markup=main())
    elif message.text == 'Сессия':
        bot.send_message(message.chat.id, 'Стоит подождать', reply_markup=main())
    else:
        bot.send_message(message.chat.id, 'Я тебя не понимаю', reply_markup=main())

bot.polling()
