# -*- coding: utf-8 -*-
import telebot
from telebot import types

bot = telebot.TeleBot('5002670071:AAE9j6ruQYg-9QZZPtxSc0i7YFVhSU4NLMg')

@bot.message_handler(commands=["start"])
def start(m):
    keyboard = types.ReplyKeyboardMarkup(resize_keyboard=True)
    keyboard.add(*[types.KeyboardButton(name) for name in ['Верхняя неделя', 'Нижняя неделя', 'Сессия/Практика', 'Расписание звонков']])
    bot.send_message(m.chat.id, 'Приветствую, мой дорогой друг, я бот Гена, что тебе сегодня требуется? Расписание? - тогда какая неделя? Может у тебя практика или сессия? Или тебе нужно расписание звонки?', reply_markup=keyboard)

@bot.message_handler(content_types=['text'])
def message(message):
    if message.text == 'Верхняя неделя':
        keyboardgostart = types.ReplyKeyboardMarkup(resize_keyboard=True)
        keyboardgostart.add(*[types.KeyboardButton(name) for name in ['1 курс', '2 курс', '3 курс', '4 курс']])
        bot.send_message(message.chat.id, 'С какого ты курса друг мой?', reply_markup=keyboardgostart)
